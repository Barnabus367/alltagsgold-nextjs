modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AlltagsGold Production Ready"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate Sitemaps"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Sitemap Generation"

[[workflows.workflow]]
name = "AlltagsGold Production Ready"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Generate Sitemaps"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/generate-sitemap.js"

[[workflows.workflow]]
name = "Production Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Sitemap Generation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/generate-sitemap.js"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "cloudrun"
