modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Migration Tool Setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_migration_tool"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AlltagsGold Production Ready"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Sitemap Generator"

[[workflows.workflow]]
name = "Migration Tool Setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && chmod +x index.js"

[[workflows.workflow]]
name = "test_migration_tool"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install commander fs-extra chalk @babel/parser @babel/traverse @babel/generator @babel/types glob && node index.js --help"

[[workflows.workflow]]
name = "AlltagsGold Production Ready"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Sitemap Generator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/generate-sitemap.js"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "cloudrun"
